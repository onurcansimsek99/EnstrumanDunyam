@model EnstrumanDunyam.Models.Contact

<h4>İletişim Formu</h4>
<hr />
<div class="contact-us-form">

    <form asp-action="ContactMail" asp-controller="Contact" class="contact-form">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6">
                <div class="form-group">
                    @*<label asp-for="FirstName" class="control-label">Adınız</label>*@
                    <input asp-for="FirstName" type="text" class="form-control" id="uname" placeholder="Adınız" required="" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @*<label asp-for="LastName" class="control-label">Soyadınız</label>*@
                    <input asp-for="LastName" type="text" class="form-control" id="Last-Name" placeholder="Soyadınız" required="" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @*<label asp-for="PhoneNumber" class="control-label"></label>*@
                    <input asp-for="PhoneNumber" type="number" class="form-control" id="number" placeholder="Telefon Numaranız" required="" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @*<label asp-for="YourEmail" class="control-label"></label>*@
                    <input asp-for="YourEmail" type="email" class="form-control" id="email" placeholder="Mail Adresiniz" required="" />
                    <span asp-validation-for="YourEmail" class="text-danger"></span>
                </div>
            </div>
            @*<div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>*@
            <div class="col-lg-12">
                <textarea asp-for="Message" class="form-control" rows="5" id="comment" placeholder="Lütfen iletinizi yazınız..."></textarea>
                <button type="submit" class="contact-btn"><i class="fas fa-paper-plane"></i> Gönder </button>
                @*<input type="submit" value="Gönder" class="contact-btn" />*@
            </div>
        </div>
    </form>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" style="margin-top: 20px;">@TempData["Message"]</div>
}

