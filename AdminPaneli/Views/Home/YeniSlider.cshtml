@model EntityLayer.Concrete.Slider
@{
    ViewData["Title"] = "YeniSlider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Slider Ekleme</h1>
<br />
<div class="d-flex justify-content-center align-items-center flex-column p-5">
    <h1>Yeni Slider Ekleme Sayfası</h1>
    <br />
    <form class="form-group w-75" method="post">
        @Html.LabelFor(x => x.SliderBaslik)
        @Html.TextBoxFor(x => x.SliderBaslik, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.SliderAciklama)
        @Html.TextAreaFor(x => x.SliderAciklama, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.SliderGorsel)
        @Html.TextBoxFor(x => x.SliderGorsel, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary">Slider Kaydet</button>
    </form>
</div>


